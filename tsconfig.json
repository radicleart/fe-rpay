{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "strict": false,
    "jsx": "preserve",
    "noImplicitAny": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "typeRoots": [ "./types", "./node_modules/@types"],
    "types": [
      "webpack-env",
      "mocha",
      "chai"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-this-alias": "off"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx", "src/services/utils.js", "src/store/rpayStacksStore.js", "src/services/searchIndexService.js", "src/store/rpaySearchStore.jse.js", "src/router/index.js", "src/store/rpayAuthStore.js", "src/store/rpayCategoryStore.js", "src/store/rpayTransactionStore.js", "src/store/rpayPrivilegeStore.js", "src/store/rpayManageCacheStore.js", "src/store/rpayMyItemStore.js", "src/services/rpayMyItemService.js"  ],
  "exclude": ["node_modules"], "src/store/rpaySearchStore.js"
}
